        <Label x:Name="tMilesLabel" Content="Total Miles:" HorizontalAlignment="Left" Margin="713,568,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.507,0.577"/>
        
        <Label Content="Trucking Company" HorizontalAlignment="Left" Margin="117,51,0,0" VerticalAlignment="Top" Height="100" Width="815" FontSize="80"/>



