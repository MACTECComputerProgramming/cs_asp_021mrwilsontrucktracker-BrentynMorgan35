        <Label Content="Social Security" HorizontalAlignment="Left" Margin="28,396,0,0" VerticalAlignment="Top" Height="26" Width="86"/>
        <TextBox x:Name="socialTextBox" HorizontalAlignment="Left" Height="23" Margin="28,422,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Phone" HorizontalAlignment="Left" Margin="28,463,0,0" VerticalAlignment="Top" Height="26" Width="43" RenderTransformOrigin="0.488,0.577"/>
